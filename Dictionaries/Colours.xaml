<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Navigation Bar -->
    <SolidColorBrush x:Key="NavBarBackground" Color="#2C3E50"/>

    <!-- Button Colors -->
    <SolidColorBrush x:Key="ButtonAddBackground" Color="#28A745"/>
    <SolidColorBrush x:Key="ButtonViewBackground" Color="#3498DB"/>
    <SolidColorBrush x:Key="ButtonEditBackground" Color="#2ECC71"/>
    <SolidColorBrush x:Key="ButtonCancelBackground" Color="#FF4444"/>
    <SolidColorBrush x:Key="ButtonForeground" Color="White"/>

    <!-- Status Colors -->
    <SolidColorBrush x:Key="StatusNotStarted" Color="#FFE6E6"/>
    <SolidColorBrush x:Key="StatusInProgress" Color="#E6F3FF"/>
    <SolidColorBrush x:Key="StatusCompleted" Color="#E6FFE6"/>

    <!-- Role Colors -->
    <SolidColorBrush x:Key="RoleAdminBackground" Color="#E6F3FF"/>
    <SolidColorBrush x:Key="RoleManagerBackground" Color="#FFF3E6"/>
    <SolidColorBrush x:Key="RoleEmployeeBackground" Color="#E6FFE6"/>
</ResourceDictionary>