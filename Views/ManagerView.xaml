<Window x:Class="TaskManagementApp.Views.ManagerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Task Management - Manager" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Menu bên trái -->
        <StackPanel Grid.Column="0" Background="#2E2E2E">
            <TextBlock Text="Manager Menu" FontSize="18" FontWeight="Bold" 
                       Foreground="White" Margin="10" HorizontalAlignment="Center"/>
            <Button Content="Dashboard" FontSize="14" Margin="10,5" Background="#0078D4" 
                    Foreground="White" Height="40" Command="{Binding NavigateToDashboardCommand}"/>
            <Button Content="Quản lý Công việc" FontSize="14" Margin="10,5" Background="#0078D4" 
                    Foreground="White" Height="40" Command="{Binding NavigateToManageTasksCommand}"/>
            <Button Content="Thông tin Cá nhân" FontSize="14" Margin="10,5" Background="#0078D4" 
                    Foreground="White" Height="40" Command="{Binding NavigateToProfileCommand}"/>
            <Button Content="Logout" FontSize="14" Margin="10,5" Background="#FF4444" 
                    Foreground="White" Height="40" Command="{Binding LogoutCommand}"/>
        </StackPanel>

        <!-- Nội dung chính -->
        <ContentControl Grid.Column="1" Margin="20" Content="{Binding}">
            <ContentControl.Style>
                <Style TargetType="ContentControl">
                    <Setter Property="ContentTemplate">
                        <Setter.Value>
                            <!-- Mặc định hiển thị Dashboard -->
                            <DataTemplate>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- Tiêu đề -->
                                    <TextBlock Grid.Row="0" Text="Dashboard" FontSize="24" FontWeight="Bold" 
                                               Foreground="#2E2E2E" Margin="0,0,0,10"/>

                                    <!-- Bộ lọc -->
                                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                                        <TextBlock Text="Lọc theo Dự án:" FontSize="14" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                        <ComboBox ItemsSource="{Binding Projects}" SelectedItem="{Binding SelectedProjectFilter}" 
                                                  DisplayMemberPath="Name" Width="150" FontSize="14" Margin="0,0,10,0"/>
                                        <Button Content="Lọc" Command="{Binding FilterDashboardCommand}" 
                                                Width="80" Height="30" Background="#0078D4" Foreground="White"/>
                                    </StackPanel>

                                    <!-- Widget thống kê -->
                                    <StackPanel Grid.Row="2" Orientation="Horizontal">
                                        <Border Background="#0078D4" Margin="10" Padding="20" CornerRadius="5">
                                            <StackPanel>
                                                <TextBlock Text="Team In Progress" Foreground="White" FontSize="16"/>
                                                <TextBlock Text="{Binding TeamInProgressCount}" Foreground="White" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                        <Border Background="#28A745" Margin="10" Padding="20" CornerRadius="5">
                                            <StackPanel>
                                                <TextBlock Text="Team Completed" Foreground="White" FontSize="16"/>
                                                <TextBlock Text="{Binding TeamCompletedCount}" Foreground="White" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                        <Border Background="#DC3545" Margin="10" Padding="20" CornerRadius="5">
                                            <StackPanel>
                                                <TextBlock Text="Team Overdue" Foreground="White" FontSize="16"/>
                                                <TextBlock Text="{Binding TeamOverdueCount}" Foreground="White" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding CurrentView}" Value="ManageTasks">
                            <Setter Property="ContentTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                            <!-- Tiêu đề -->
                                            <TextBlock Grid.Row="0" Text="Quản lý Công việc" FontSize="24" FontWeight="Bold" 
                                                       Foreground="#2E2E2E" Margin="0,0,0,10"/>

                                            <!-- Bộ lọc -->
                                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                                                <TextBlock Text="Lọc theo Dự án:" FontSize="14" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                                <ComboBox ItemsSource="{Binding Projects}" SelectedItem="{Binding SelectedProjectFilter}" 
                                                          DisplayMemberPath="Name" Width="150" FontSize="14" Margin="0,0,10,0"/>
                                                <TextBlock Text="Lọc theo Trạng thái:" FontSize="14" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                                <ComboBox ItemsSource="{Binding StatusFilters}" SelectedItem="{Binding SelectedStatusFilter}" 
                                                          Width="150" FontSize="14" Margin="0,0,10,0"/>
                                                <Button Content="Lọc" Command="{Binding FilterTasksCommand}" 
                                                        Width="80" Height="30" Background="#0078D4" Foreground="White"/>
                                                <Button Content="Thêm Công việc" Command="{Binding AddTaskCommand}" 
                                                        Width="120" Height="30" Background="#28A745" Foreground="White" Margin="10,0,0,0"/>
                                            </StackPanel>

                                            <!-- Danh sách Công việc -->
                                            <DataGrid Grid.Row="2" ItemsSource="{Binding FilteredTasks}" AutoGenerateColumns="False" 
                                                      CanUserAddRows="False" IsReadOnly="True" SelectionMode="Single">
                                                <DataGrid.Columns>
                                                    <DataGridTextColumn Header="Task ID" Binding="{Binding TaskId}" Width="80"/>
                                                    <DataGridTextColumn Header="Tên Công việc" Binding="{Binding Title}" Width="150"/>
                                                    <DataGridTextColumn Header="Dự án" Binding="{Binding ProjectId}" Width="100"/>
                                                    <DataGridTextColumn Header="Người được giao" Binding="{Binding AssignedTo}" Width="120"/>
                                                    <DataGridTextColumn Header="Trạng thái" Binding="{Binding Status}" Width="100"/>
                                                    <DataGridTextColumn Header="Ngày Hết hạn" Binding="{Binding DueDate}" Width="120"/>
                                                    <DataGridTemplateColumn Header="Hành động" Width="150">
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <Button Content="Xem" Margin="2" Background="#0078D4" Foreground="White"
                                                                            Command="{Binding Path=DataContext.ViewTaskCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                                                                            CommandParameter="{Binding}"/>
                                                                    <Button Content="Sửa" Margin="2" Background="#FFA500" Foreground="White"
                                                                            Command="{Binding Path=DataContext.EditTaskCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                                                                            CommandParameter="{Binding}"/>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>
                                                </DataGrid.Columns>
                                            </DataGrid>
                                        </Grid>
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ContentControl.Style>
        </ContentControl>
    </Grid>
</Window>