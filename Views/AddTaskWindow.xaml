<Window x:Class="TaskManagementApp.Views.AddTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thêm Công việc" Height="550" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Tên Công việc" FontSize="14" Margin="0,0,0,5"/>
        <TextBox Grid.Row="1" Text="{Binding NewTaskTitle, UpdateSourceTrigger=PropertyChanged}" 
                 FontSize="14" Padding="5" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="2" Text="Mô tả" FontSize="14" Margin="0,0,0,5"/>
        <TextBox Grid.Row="3" Text="{Binding NewTaskDescription, UpdateSourceTrigger=PropertyChanged}" 
                 FontSize="14" Padding="5" Margin="0,0,0,10" Height="60" AcceptsReturn="True"/>

        <TextBlock Grid.Row="4" Text="Trạng thái" FontSize="14" Margin="0,0,0,5"/>
        <ComboBox Grid.Row="5" ItemsSource="{Binding StatusOptions}" SelectedItem="{Binding NewTaskStatus}" 
                  FontSize="14" Padding="5" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="6" Text="Ngày Hết hạn" FontSize="14" Margin="0,0,0,5"/>
        <DatePicker Grid.Row="7" SelectedDate="{Binding NewTaskDueDate, StringFormat='dd/MM/yyyy'}" 
                    FontSize="14" Padding="5" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="8" Text="Dự án" FontSize="14" Margin="0,0,0,5"/>
        <ComboBox Grid.Row="9" ItemsSource="{Binding Projects}" SelectedItem="{Binding SelectedProject}" 
                  DisplayMemberPath="Name" FontSize="14" Padding="5" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="10" Text="Người được giao" FontSize="14" Margin="0,0,0,5"/>
        <ComboBox Grid.Row="11" ItemsSource="{Binding Employees}" SelectedItem="{Binding SelectedEmployee}" 
                  DisplayMemberPath="Name" FontSize="14" Padding="5" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="12" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Hủy" Command="{Binding CancelCommand}" 
                    Style="{StaticResource RoundedButton}" Background="{StaticResource ButtonCancelBackground}" 
                    Margin="0,0,10,0"/>
            <Button Content="Thêm" Command="{Binding AddCommand}" 
                    Style="{StaticResource RoundedButton}" Background="{StaticResource ButtonAddBackground}"/>
        </StackPanel>
    </Grid>
</Window>